@using Thinktecture.IdentityServer.Web.App_LocalResources.Account
@model Thinktecture.IdentityServer.Web.ViewModels.UserApprovalModel

@{
    ViewBag.Title = "User sApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div id="divGrid">
        <b>User Approval</b>
        @{ if (ViewData["gridEmpty"] != "No Record(s) to display!")
           { 
            <table>

                <tr>
                    <td>
                        <fieldset style="border: 0;">
                            <table id="WAStbTemlate" cellpadding="2px" rules="all" border="1" style="border-collapse: collapse; width: 900px">
                                <tr>
                                    <th style="width: 20%">Name</th>
                                    <th style="width: 20%">Email</th>
                                    <th style="width: 15%">Application</th>
                                    <th style="width: 15%">User Name</th>
                                    <th style="width: 30%">Status</th>
                                </tr>
                                <tbody id="tbTemplate">
                                    @foreach (var item in Model.Users)
                                    {    
                                        <tr>
                                            <td>@item.Fname  @item.Lname</td>
                                            <td>@item.Email</td>
                                            <td>@item.Application</td>
                                            <td>@item.UserName</td>

                                            <td style="text-align: center">@Html.ActionLink("Approve", "ApproveUser", "Account", new { UserName = item.UserName, status = true }, new { @class = "bluebutton" })
                                                @Html.ActionLink("Reject", "ApproveUser", "Account", new { UserName = item.UserName, status = false }, new { @class = "bluebutton" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </fieldset>
                    </td>
                </tr>
            </table>
           }
           else
           {
            <div class="divResult">
                <br />
                <br />
                @ViewData["gridEmpty"]
          
            </div>
           }
            <div class="divResult">

                @ViewData["Result"]
            </div>
        }
    </div>

</body>

<style type="text/css">
    .divaction
    {
        text-align: right;
        /*display: none;*/
    }

    .bluebutton
    {
        background: #293955;
        border: none;
        color: #BFDBFF;
        display: inline-block;
        font-weight: bold;
        /*margin-right: 6px;*/
        min-width: 40px;
        /*padding: 2px;*/
        text-decoration: none;
        text-align: center;
        width: 110px;
        border-radius: 7px;
    }

    #WAStbTemlate th
    {
        font-family: Arial, Helvetica, sans-serif, Verdana;
        font-size: 10pt;
        text-align: center;
    }

    #WAStbTemlate tr td
    {
        padding-left: 5px;
    }
</style>

</html>
